<div class="card-columns col-lg">
  <%
    if (items) {
      var cards = '';
      //<!-- Iterate the items object & update the cards variable -->
      items.forEach(function(item) {  //making a card for each movie that was returned by the API call
        cards += 
  
        '<div class="card" style="width: 18rem;"><div class="card-body"><h4 class="card-title">' 
          + item.display_title + 
          '</h4><h7>Link to article:</h7><a href="'+item.link.url+'" class="btn btn-info">'+ item.link.suggested_link_text + 
            '</a><p>Published Date:<p><p>'+item.publication_date+'<p><p>Review Summary:</p><p>'+item.summary_short+'</p></div></div>'
        
      }); %>
      <%- cards %>
  <% } %>
  </div>